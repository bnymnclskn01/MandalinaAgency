@model Mandalina.Entities.Categories

@{
    ViewBag.Title = "Yeni Kategori Ekle";
    Layout = "~/Areas/Panel/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                <div class="panel-actions">
                    <a href="#" class="fa fa-caret-down"></a>
                    <a href="#" class="fa fa-times"></a>
                </div>

                <h2 class="panel-title">Yeni Kategori Ekle</h2>
            </header>
            <div class="panel-body">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-horizontal">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                        <div class="form-group">
                            <label class="control-label col-md-2">Dil</label>
                            <div class="col-md-10">
                                @Html.DropDownList("LanguageId", null, htmlAttributes: new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.LanguageId, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label col-md-2">Kategori Adı</label>
                            <div class="col-md-10">
                                <input type="text" name="Name" class="form-control" required placeholder="Kategori Adı Giriniz" maxlength="110" />
                                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label col-md-2">Kategori Not</label>
                            <div class="col-md-10">
                                <input type="text" name="Note" class="form-control" placeholder="Not Giriniz" maxlength="110" />
                                @Html.ValidationMessageFor(model => model.Note, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label col-md-2">Kategori İçerik</label>
                            <div class="col-md-10">
                                <input type="text" name="Content" class="form-control" placeholder="Kategori İçerik Giriniz" maxlength="110" />
                                @Html.ValidationMessageFor(model => model.Content, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label col-md-2">Kategori Sıra</label>
                            <div class="col-md-10">
                                <input type="number" required class="form-control" name="Rank" placeholder="Rank Giriniz" maxlength="110" />
                                @Html.ValidationMessageFor(model => model.Rank, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label col-md-2">Uzun Url</label>
                            <div class="col-md-10">
                                <input type="text" name="CategorySlug" class="form-control" required placeholder="/title Uzun Url Giriniz" maxlength="110" />
                                @Html.ValidationMessageFor(model => model.CategorySlug, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label col-md-2">Kısa Url</label>
                            <div class="col-md-10">
                                <input type="text" name="RawSlug" class="form-control" required placeholder="title" maxlength="110" />
                                @Html.ValidationMessageFor(model => model.RawSlug, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label col-md-2">Aktif | Pasif</label>
                            <div class="col-md-10">
                                <div class="checkbox">
                                    <select class="form-control mb-md" required name="IsActiveted">
                                        <option value="True">Aktif</option>
                                        <option value="False">Pasif</option>
                                    </select>
                                    @Html.ValidationMessageFor(model => model.IsActiveted, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <button type="submit" class="btn btn-success"><i class="fa fa-check"></i> Yeni Kategori Ekle</button>
                                <a href="@Url.Action("Index","CategoryPage")" class="btn btn-dark"><i class="fa fa-reply-all"></i> Listeye Geri Dön</a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </section>

    </div>
</div>