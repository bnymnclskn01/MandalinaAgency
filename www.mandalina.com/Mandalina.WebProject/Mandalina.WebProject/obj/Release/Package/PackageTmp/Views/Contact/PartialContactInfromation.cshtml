@model Mandalina.Entities.ContactInformation
<div id="info-contact" class="section-padding background-section">
    <div class="container">
        <div class="section-title mb-70 align-items-start ">
            @{ Html.RenderAction("PartialContsantValueContactInformationTitle", "Contact"); }

        </div>

        <div class="contact-info d-grid grid-lg-3 border-top border-bottom pt-50 pb-50">
            <div class="info-item">
                <div class="icon heading-color mb-15">
                    <i class="fas fa-paper-plane"></i>
                </div>

                <div class="content">
                    <h5 class="sm-title-block mb-15 text-uppercase">Adres</h5>
                    <p class="p-larg letter-spacing-2">@Model.Address</p>
                </div>
            </div>

            <div class="info-item">
                <div class="icon heading-color mb-15">
                    <i class="fas fa-headphones"></i>
                </div>

                <div class="content">
                    <h5 class="sm-title-block mb-15 text-uppercase">Telefon</h5>
                    <a class="p-larg letter-spacing-2" href="tel:@Model.PhoneNumber" target="_blank"><i class="fa fa fa-phone"></i> Telefon</a><br />
                    <a class="p-larg letter-spacing-2" href="https://wa.me/@Model.PhoneNumber2/" target="_blank"><i class="fa fa-phone-square"></i>WhatsApp</a>
                </div>
            </div>

            <div class="info-item">
                <div class="icon heading-color mb-15">
                    <i class="fas fa-envelope"></i>
                </div>

                <div class="content">
                    <h5 class="sm-title-block mb-15 text-uppercase">Email</h5>
                    <a class="p-larg letter-spacing-2" href="mailto:@Model.Mail" target="_blank">Mandalina Agency Mail</a>
                </div>
            </div>
        </div>
    </div>
</div>
