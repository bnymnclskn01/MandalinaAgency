@model Mandalina.Entities.Service

@{
    ViewBag.Title = "Yeni Hizmet Güncelle";
    Layout = "~/Areas/Panel/Views/Shared/_Layout.cshtml";
}
@if (ViewBag.Mesaj != null)
{
    <div class="row">
        <div class="col-lg-12">
            <section class="panel">
                <header class="panel-heading bg-danger">
                    <div class="panel-actions">
                        <a href="#" style="color:white;" class="fa fa-caret-down"></a>
                        <a href="#" style="color:white;" class="fa fa-times"></a>
                    </div>

                    <h2 class="panel-title" style="color:white;">Hata Mesajı</h2>
                </header>
                <div class="panel-body">
                    <p>@ViewBag.Mesaj</p>
                </div>
            </section>

        </div>
    </div>
}
<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                <div class="panel-actions">
                    <a href="#" class="fa fa-caret-down"></a>
                    <a href="#" class="fa fa-times"></a>
                </div>

                <h2 class="panel-title">Yeni Hizmet Güncelle</h2>
            </header>
            <div class="panel-body">
                @using (Html.BeginForm("Edit", "ServicePage", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.Id)

                    <div class="form-group">
                        <label class="control-label col-md-2">Hizmet Dil</label>
                        <div class="col-md-10">
                            @Html.DropDownList("LanguageId", null, htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.LanguageId, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-2">Hizmet Kategori</label>
                        <div class="col-md-10">
                            @Html.DropDownList("CategoryId", null, htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.CategoryId, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-2">Şirket Adı</label>
                        <div class="col-md-10">
                            <input type="text" name="serviceCompany" class="form-control" placeholder="Şirket Adı" value="@Model.serviceCompany" required maxlength="75" />
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-2">Hizmet Adı</label>
                        <div class="col-md-10">
                            <input type="text" name="serviceTitle" class="form-control" placeholder="Hizmet Adı" value="@Model.serviceTitle" required maxlength="75" />
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-2">Hizmet Adı - 2</label>
                        <div class="col-md-10">
                            <input type="text" name="serviceTitle2" class="form-control" placeholder="Hizmet Adı - 2" value="@Model.serviceTitle2" required maxlength="75" />
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-2">Hizmet İçerik</label>
                        <div class="col-md-10">
                            <textarea class="ckeditor" name="serviceContent" required>@Model.serviceContent</textarea>
                            @Html.ValidationMessageFor(model => model.serviceContent, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-2">Hizmet İçerik - 2</label>
                        <div class="col-md-10">
                            <textarea class="ckeditor" name="serviceContent3" required>@Model.serviceContent3</textarea>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-2">Hizmet İçerik - 3</label>
                        <div class="col-md-10">
                            <textarea class="ckeditor" name="serviceContent4" required>@Model.serviceContent4</textarea>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-2">Detay Başlığı</label>
                        <div class="col-md-10">
                            <textarea class="form-control" rows="5" name="serviceContent2" placeholder="Hizmet Detay Başlığı">@Model.serviceContent2</textarea>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-2">Hizmet Resim</label>
                        <div class="col-md-10">
                            <img src="@Model.ImageUrl" width="500" />
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-2">Hizmet Resim</label>
                        <div class="col-md-10">
                            <input type="file" name="ImageUrl" class="form-control" />
                            @Html.ValidationMessageFor(model => model.ImageUrl, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-2">Hizmet Sıra</label>
                        <div class="col-md-10">
                            <input type="number" name="Rank" class="form-control" value="@Model.Rank" placeholder="1-2-3-4-5" required maxlength="4" />
                            @Html.ValidationMessageFor(model => model.Rank, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-2">Aktif | Pasif</label>
                        <div class="col-md-10">
                            <div class="checkbox">
                                <select class="form-control mb-md" required name="IsActiveted">
                                    <option value="True">Aktif</option>
                                    <option value="False">Pasif</option>
                                </select>
                                @Html.ValidationMessageFor(model => model.IsActiveted, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-2">Anasayfa Durumu</label>
                        <div class="col-md-10">
                            <div class="checkbox">
                                <select class="form-control mb-md" required name="IsMainActive">
                                    <option value="True">Ürün Anasayfada Gözüksün</option>
                                    <option value="False">Ürün Anasayfada Gözükmesin</option>
                                </select>
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-2">Durum</label>
                        <div class="col-md-10">
                            <div class="checkbox">
                                <select class="form-control mb-md" required name="IsDeleted">
                                    <option value="False">Kaldırılmasın</option>
                                    <option value="True">Kaldırılsın</option>
                                </select>
                                @Html.ValidationMessageFor(model => model.IsDeleted, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <button type="submit" class="btn btn-primary"><i class="fa fa-pencil"></i> Yeni Hizmet Güncelle</button>
                            <a href="@Url.Action("Index","ServicePage")" class="btn btn-dark"><i class="fa fa-reply-all"></i> Listeye Geri Dön</a>
                        </div>
                    </div>
                </div>
                }
            </div>
        </section>

    </div>
</div>