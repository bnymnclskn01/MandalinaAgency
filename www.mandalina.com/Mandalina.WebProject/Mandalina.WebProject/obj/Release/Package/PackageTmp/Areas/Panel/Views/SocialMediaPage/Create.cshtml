@model Mandalina.Entities.SocialMedias

@{
    ViewBag.Title = "Yeni Sosyal Medya Ekle";
    Layout = "~/Areas/Panel/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                <div class="panel-actions">
                    <a href="#" class="fa fa-caret-down"></a>
                    <a href="#" class="fa fa-times"></a>
                </div>

                <h2 class="panel-title">Yeni Sosyal Medya Ekle</h2>
            </header>
            <div class="panel-body">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        <label class="control-label col-md-2">Sosyal Medya Adı</label>
                        <div class="col-md-10">
                            <input type="text" name="Name" class="form-control" required placeholder="Lütfen Sosyal Medya Adı Giriniz" / maxlength="50">
                            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-2">Sosyal Medya Url</label>
                        <div class="col-md-10">
                            <input type="url" class="form-control" required placeholder="Lütfen Sosyal Medya Link Adresini Giriniz : http://instagram.com/mandalina" name="Link" maxlength="100" />
                            @Html.ValidationMessageFor(model => model.Link, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-2">Sıra</label>
                        <div class="col-md-10">
                            <input type="number" name="Rank" class="form-control" placeholder="Lütfen Sıra Giriniz" maxlength="4" />
                            @Html.ValidationMessageFor(model => model.Rank, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-2">Dil</label>
                        <div class="col-md-10">
                            @Html.DropDownList("LanguageId", null, htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.LanguageId, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-2">Aktif | Pasif</label>
                        <div class="col-md-10">
                            <div class="checkbox">
                                <select class="form-control mb-md" required name="IsActiveted">
                                    <option value="True">Aktif</option>
                                    <option value="False">Pasif</option>
                                </select>
                                @Html.ValidationMessageFor(model => model.IsActiveted, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <button type="submit" class="btn btn-success"><i class="fa fa-check"></i> Yeni Sosyal Medya Ekle</button>
                            <a href="@Url.Action("Index","SocialMediaPage")" class="btn btn-dark"><i class="fa fa-reply-all"></i> Listeye Geri Dön</a>
                        </div>
                    </div>
                </div>
                }
            </div>
        </section>

    </div>
</div>