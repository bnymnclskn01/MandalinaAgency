@model Mandalina.Entities.Work

@{
    ViewBag.Title = "Yeni Alt İş Ekle";
    Layout = "~/Areas/Panel/Views/Shared/_Layout.cshtml";
}
@if (ViewBag.Mesaj != null)
{
    <div class="row">
        <div class="col-lg-12">
            <section class="panel">
                <header class="panel-heading bg-danger">
                    <div class="panel-actions">
                        <a href="#" style="color:white;" class="fa fa-caret-down"></a>
                        <a href="#" style="color:white;" class="fa fa-times"></a>
                    </div>

                    <h2 class="panel-title" style="color:white;">Hata Mesajı</h2>
                </header>
                <div class="panel-body">
                    <p>@ViewBag.Mesaj</p>
                </div>
            </section>

        </div>
    </div>
}
<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                <div class="panel-actions">
                    <a href="#" class="fa fa-caret-down"></a>
                    <a href="#" class="fa fa-times"></a>
                </div>

                <h2 class="panel-title">Yeni Alt İş Ekle</h2>
            </header>
            <div class="panel-body">
                @using (Html.BeginForm("Create", "WorkPage", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <div class="form-group">
                        <label class="control-label col-md-2">Ana Başlık</label>
                        <div class="col-md-10">
                            @Html.DropDownList("ServiceId", null, htmlAttributes: new { @class = "form-control" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-2">Alt İş Adı</label>
                        <div class="col-md-10">
                            <input type="text" name="Name" class="form-control" required placeholder="Lütfen Alt İş Adı Giriniz" maxlength="110" />
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-2">Resim Ekle</label>
                        <div class="col-md-10">
                            <input type="file" name="ImageUrl" multiple class="form-control" required /><p>Lütfen En Fazla 3 Adet Resim Giriniz</p>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-3">Alt İş İçerik</label>
                        <div class="col-md-10">
                            <textarea class="ckeditor" name="Content" maxlength="10000"></textarea>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-3">Alt İş İçerik-2</label>
                        <div class="col-md-10">
                            <textarea class="ckeditor" name="Content2" maxlength="10000"></textarea>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-3">Alt İş İçerik-3</label>
                        <div class="col-md-10">
                            <textarea class="ckeditor" name="Content3" maxlength="10000"></textarea>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-2">Sıra</label>
                        <div class="col-md-10">
                            <input type="number" name="Rank" class="form-control" required placeholder="Sıra Giriniz" maxlength="4" />
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-2">Lütfen Seçim Yapın</label>
                        <div class="col-md-10">
                            <div class="radio">
                                @Html.EditorFor(model => model.OneImage) Tek Resim Olsun | Olmasın<br />
                                @Html.EditorFor(model => model.TwoImage) İki Resim Olsun | Olmasın<br />
                                @Html.EditorFor(model => model.ThreeImage) Üç Resim Olsun | Olmasın<br />
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-2">Lütfen Seçim Yapın</label>
                        <div class="col-md-10">
                            <div class="radio">
                                @Html.EditorFor(model => model.TextIsActive) Yazı Olsun | Olmasın<br />
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-2">Aktif | Pasif</label>
                        <div class="col-md-10">
                            <div class="checkbox">
                                <select class="form-control mb-md" required name="IsActiveted">
                                    <option value="True">Aktif</option>
                                    <option value="False">Pasif</option>
                                </select>
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <button type="submit" class="btn btn-success"><i class="fa fa-check"></i> Yeni Alt İş Ekle</button>
                            <a href="@Url.Action("Index","WorkPage")" class="btn btn-dark"><i class="fa fa-reply-all"></i> Listeye Geri Dön</a>
                        </div>
                    </div>
                </div>
                }
            </div>
        </section>

    </div>
</div>