@model Mandalina.Entities.AboutUs

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Panel/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                <div class="panel-actions">
                    <a href="#" class="fa fa-caret-down"></a>
                    <a href="#" class="fa fa-times"></a>
                </div>

                <h2 class="panel-title">Yeni Hakkımızda Güncelle</h2>
            </header>
            <div class="panel-body">
                @using (Html.BeginForm("Edit", "AboutUs", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.Id)

                    <div class="form-group">
                        <label class="control-label col-md-2">Dil Seçimi (*)</label>
                        <div class="col-md-10">
                            @Html.DropDownList("LanguageId", null, htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.LanguageId, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-2">Hakkımızda Resim (*)</label>
                        <div class="col-md-10">
                            <img src="@Model.ImageUrl" width="250" />
                            @Html.ValidationMessageFor(model => model.ImageUrl, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-2">Hakkımızda Resim</label>
                        <div class="col-md-10">
                            <input type="file" name="ImageUrl" class="form-control" />
                            @Html.ValidationMessageFor(model => model.ImageUrl, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-2">Ana Başlık (*)</label>
                        <div class="col-md-10">
                            <input type="text" value="@Model.MainTitle" name="MainTitle" class="form-control" required placeholder="Ana Başlık Giriniz..." maxlength="110" />
                            @Html.ValidationMessageFor(model => model.MainTitle, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-2">Alt Başlık (*)</label>
                        <div class="col-md-10">
                            <input type="text" value="@Model.Title" name="Title" required class="form-control" placeholder="Alt Başlık Giriniz..." maxlength="110" />
                            @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-2">Hakkımızda İçerik (*)</label>
                        <div class="col-md-10">
                            <textarea name="AboutUsContent" class="ckeditor" required maxlength="10000">@Model.AboutUsContent</textarea>
                            @Html.ValidationMessageFor(model => model.AboutUsContent, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-2">Hakkımızda İçerik 2</label>
                        <div class="col-md-10">
                            <textarea name="VisionContent" class="ckeditor" maxlength="10000">@Model.VisionContent</textarea>
                            @Html.ValidationMessageFor(model => model.VisionContent, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-2">Hakkımızda İçerik 3</label>
                        <div class="col-md-10">
                            <textarea name="MissionContent" class="ckeditor" maxlength="10000">@Model.MissionContent</textarea>
                            @Html.ValidationMessageFor(model => model.MissionContent, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <button type="submit" class="btn btn-primary"><i class="fa fa-pencil"></i> Yeni Hakkımızda Güncelle</button>
                            <a href="@Url.Action("Index","AboutUs")" class="btn btn-dark"><i class="fa fa-reply-all"></i> Listeye Geri Dön</a>
                        </div>
                    </div>
                </div>
                }
            </div>
        </section>

    </div>
</div>