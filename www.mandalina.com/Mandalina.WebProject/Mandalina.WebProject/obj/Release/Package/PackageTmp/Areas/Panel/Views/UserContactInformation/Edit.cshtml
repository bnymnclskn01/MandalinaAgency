@model Mandalina.Entities.ContactInformation

@{
    ViewBag.Title = "İletişim Bilgisi Güncelle";
    Layout = "~/Areas/Panel/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                <div class="panel-actions">
                    <a href="#" class="fa fa-caret-down"></a>
                    <a href="#" class="fa fa-times"></a>
                </div>

                <h2 class="panel-title">Yeni İletişim Bilgisi Ekle</h2>
            </header>
            <div class="panel-body">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.Id)
                    <div class="form-group">
                        <label class="control-label col-md-2">Adres-1(*)</label>
                        <div class="col-md-10">
                            <textarea class="form-control" rows="5" required placeholder="Lütfen Adres-1 Giriniz" name="Address">@Model.Address</textarea>
                            @Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-2">Adres-2</label>
                        <div class="col-md-10">
                            <textarea class="form-control" rows="5" placeholder="Lütfen Adres-2 Giriniz" name="Address2">@Model.Address2</textarea>
                            @Html.ValidationMessageFor(model => model.Address2, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-2">Telefon(*)</label>
                        <div class="col-md-10">
                            <input type="tel" name="PhoneNumber" class="form-control" value="@Model.PhoneNumber" maxlength="11" required placeholder="Lütfen Telefon Giriniz" />
                            @Html.ValidationMessageFor(model => model.PhoneNumber, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-2">WhatsApp(*)</label>
                        <div class="col-md-10">
                            <input type="tel" name="PhoneNumber2" value="@Model.PhoneNumber2"  class="form-control" maxlength="11" required placeholder="Lütfen WhatsApp Giriniz" />
                            @Html.ValidationMessageFor(model => model.PhoneNumber2, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-2">E-Mail(*)</label>
                        <div class="col-md-10">
                            <input type="tel" name="Mail" value="@Model.Mail" class="form-control" maxlength="75" required placeholder="Lütfen Mail Giriniz" />
                            @Html.ValidationMessageFor(model => model.Mail, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-2">Fax</label>
                        <div class="col-md-10">
                            <input type="tel" name="FaxNumber" value="@Model.FaxNumber" class="form-control" maxlength="11" placeholder="Lütfen Fax Giriniz" />
                            @Html.ValidationMessageFor(model => model.FaxNumber, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-2">Dil Seçiniz</label>
                        <div class="col-md-10">
                            @Html.DropDownList("LanguageId", null, htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.LanguageId, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <button type="submit" class="btn btn-success"><i class="fa fa-check"></i> Yeni İletişim Bilgisi Ekle</button>
                            <a href="@Url.Action("Index","UserContactInformation")" class="btn btn-dark"><i class="fa fa-reply-all"></i> Listeye Geri Dön</a>
                        </div>
                    </div>
                </div>
                }
            </div>
        </section>

    </div>
</div>