@model Mandalina.Entities.Service

@{
    ViewBag.Title = "Yeni Hizmet Ekle";
    Layout = "~/Areas/Panel/Views/Shared/_Layout.cshtml";
}
@if (ViewBag.Mesaj != null)
{
    <div class="row">
        <div class="col-lg-12">
            <section class="panel">
                <header class="panel-heading bg-danger">
                    <div class="panel-actions">
                        <a href="#" style="color:white;" class="fa fa-caret-down"></a>
                        <a href="#" style="color:white;" class="fa fa-times"></a>
                    </div>

                    <h2 class="panel-title" style="color:white;">Hata Mesajı</h2>
                </header>
                <div class="panel-body">
                    <p>@ViewBag.Mesaj</p>
                </div>
            </section>

        </div>
    </div>
}
<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                <div class="panel-actions">
                    <a href="#" class="fa fa-caret-down"></a>
                    <a href="#" class="fa fa-times"></a>
                </div>

                <h2 class="panel-title">Yeni Hizmet Ekle</h2>
            </header>
            <div class="panel-body">
                @using (Html.BeginForm("Create", "ServicePage", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <div class="form-group">
                        <label class="control-label col-md-2">Hizmet Dil</label>
                        <div class="col-md-10">
                            @Html.DropDownList("LanguageId", null, htmlAttributes: new { @class = "form-control" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-2">Hizmet Kategori</label>
                        <div class="col-md-10">
                            @Html.DropDownList("CategoryId", null, htmlAttributes: new { @class = "form-control" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-2">Hizmet Adı</label>
                        <div class="col-md-10">
                            <input type="text" name="serviceTitle" class="form-control" required placeholder="Hizmet Başlığı..." class="form-control" maxlength="110" />
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-2">Şirket Adı</label>
                        <div class="col-md-10">
                            <input type="text" name="serviceCompany" class="form-control" placeholder="Şirket Adı" required maxlength="75" />
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-2">Hizmet Adı -2</label>
                        <div class="col-md-10">
                            <input type="text" name="serviceTitle2" class="form-control" placeholder="Hizmet Adı - 2" required maxlength="75" />
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-2">Hizmet Resim</label>
                        <div class="col-md-10">
                            <input type="file" name="ImageUrl" class="form-control" required />
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-2">Hizmet İçerik</label>
                        <div class="col-md-10">
                            <textarea class="ckeditor" name="serviceContent" required></textarea>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-2">Hizmet İçerik - 2</label>
                        <div class="col-md-10">
                            <textarea class="ckeditor" name="serviceContent3" required></textarea>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-2">Hizmet İçerik - 3</label>
                        <div class="col-md-10">
                            <textarea class="ckeditor" name="serviceContent4" required></textarea>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-3">Servis Başlık Detayı</label>
                        <div class="col-md-10">
                            <textarea class="form-control" rows="5" name="serviceContent2"></textarea>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-2">Hizmet Sıra</label>
                        <div class="col-md-10">
                            <input type="number" name="Rank" class="form-control" placeholder="1-2-3-4-5" required maxlength="4" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-2">Anasayfa Durumu</label>
                        <div class="col-md-10">
                            <div class="checkbox">
                                <select class="form-control mb-md" required name="IsMainActive">
                                    <option value="True">Ürün Anasayfada Gözüksün</option>
                                    <option value="False">Ürün Anasayfada Gözükmesin</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-2">Aktif | Pasif</label>
                        <div class="col-md-10">
                            <div class="checkbox">
                                <select class="form-control mb-md" required name="IsActiveted">
                                    <option value="True">Aktif</option>
                                    <option value="False">Pasif</option>
                                </select>
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <button type="submit" class="btn btn-success"><i class="fa fa-check"></i> Yeni Hizmet Ekle</button>
                            <a href="@Url.Action("Index","ServicePage")" class="btn btn-dark"><i class="fa fa-reply-all"></i> Listeye Geri Dön</a>
                        </div>
                    </div>
                </div>
                }
            </div>
        </section>

    </div>
</div>