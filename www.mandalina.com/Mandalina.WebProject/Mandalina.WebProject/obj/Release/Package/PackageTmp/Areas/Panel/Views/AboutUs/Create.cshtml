@model Mandalina.Entities.AboutUs

@{
    ViewBag.Title = "Yeni Hakkımızda Ekle";
    Layout = "~/Areas/Panel/Views/Shared/_Layout.cshtml";
}
@if (ViewBag.Mesaj != null)
{
    <div class="row">
        <div class="col-lg-12">
            <section class="panel">
                <header class="panel-heading bg-danger">
                    <div class="panel-actions">
                        <a href="#" style="color:white;" class="fa fa-caret-down"></a>
                        <a href="#" style="color:white;"  class="fa fa-times"></a>
                    </div>

                    <h2 class="panel-title" style="color:white;">Hata Mesajı</h2>
                </header>
                <div class="panel-body">
                    <p>@ViewBag.Mesaj</p>
                </div>
            </section>

        </div>
    </div>
}

<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                <div class="panel-actions">
                    <a href="#" class="fa fa-caret-down"></a>
                    <a href="#" class="fa fa-times"></a>
                </div>

                <h2 class="panel-title">Yeni Hakkımızda Ekle</h2>
            </header>
            <div class="panel-body">
                @using (Html.BeginForm("Create", "AboutUs", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    @Html.AntiForgeryToken()

                    <div class="form-horizontal">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                        <div class="form-group">
                            <label class="control-label col-md-2">Dil Seçimi (*)</label>
                            <div class="col-md-10">
                                @Html.DropDownList("LanguageId", null, htmlAttributes: new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.LanguageId, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label col-md-2">Hakkımızda Resim (*)</label>
                            <div class="col-md-10">
                                <input type="file" name="ImageUrl" required class="form-control" />
                                @Html.ValidationMessageFor(model => model.ImageUrl, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label col-md-2">Ana Başlık (*)</label>
                            <div class="col-md-10">
                                <input type="text" name="MainTitle" class="form-control" required placeholder="Ana Başlık Giriniz..." maxlength="110" />
                                @Html.ValidationMessageFor(model => model.MainTitle, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label col-md-2">Alt Başlık (*)</label>
                            <div class="col-md-10">
                                <input type="text" name="Title" required class="form-control" placeholder="Alt Başlık Giriniz..." maxlength="110" />
                                @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label col-md-2">Hakkımızda İçerik (*)</label>
                            <div class="col-md-10">
                                <textarea name="AboutUsContent" class="ckeditor" required maxlength="10000"></textarea>
                                @Html.ValidationMessageFor(model => model.AboutUsContent, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label col-md-2">Hakkımızda İçerik 2</label>
                            <div class="col-md-10">
                                <textarea name="VisionContent" class="ckeditor" maxlength="10000"></textarea>
                                @Html.ValidationMessageFor(model => model.VisionContent, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label col-md-2">Hakkımızda İçerik 3</label>
                            <div class="col-md-10">
                                <textarea name="MissionContent" class="ckeditor" maxlength="10000"></textarea>
                                @Html.ValidationMessageFor(model => model.MissionContent, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <button type="submit" class="btn btn-success"><i class="fa fa-check"></i> Yeni Hakkımızda Ekle</button>
                                <a href="@Url.Action("Index","AboutUs")" class="btn btn-dark"><i class="fa fa-reply-all"></i> Listeye Geri Dön</a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </section>

    </div>
</div>