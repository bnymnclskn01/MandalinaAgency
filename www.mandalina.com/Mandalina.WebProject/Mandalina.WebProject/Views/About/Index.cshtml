@model Mandalina.Entities.AboutUs
@{

}
<div class="wrapper">
    <!-- ========== Header Normal ========== -->
    <header class="header-normal dsn-header-parallax has-scale v-dark-head h-70-v">
        <div class="bg-container dsn-hero-parallax-img " data-dsn-ajax="img" data-overlay="5">
            <img class="cover-bg-img"
                 src="data:image/gif;base64,R0lGODlhAQABAAAAACH5BAEKAAEALAAAAAABAAEAAAICTAEAOw=="
                 data-dsn-src="~/Content/Yeni/assets/img/1.jpg"
                 data-dsn-srcset="@Model.ImageUrl" alt="Text">
        </div>

        <div class="container h-100">
            <div class="hero-content align-items-start justify-content-center h-100">
                <div class="row w-100">
                    <div class="col-lg-12">
                        <div class="box-left">
                            <h2 class=" p-10 mb-25 text-uppercase" title="@Model.MainTitle">@Model.MainTitle</h2>
                            <h1 class="title text-uppercase" title="@Model.Title">
                                @Model.Title
                            </h1>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </header>
    <!-- ========== End Header Normal ========== -->
    <div id="about-section" class="hero-about section-margin">
        <div class="container">
            <div class="section-title mb-70 align-items-start ">
                <h2 class="title-h2 text-uppercase" title="@Model.MainTitle">
                    @Model.Title
                </h2>
            </div>
            <div class="d-grid grid-md-1">
                <p>
                    @Html.Raw(Model.AboutUsContent)
                </p>
            </div>
        </div>
    </div>
</div>

<div class="next-page p-relative pt-section background-section">

    <div class="c-wapp text-center w-100">
        <span class="section-sub-title d-block p-relative mb-25">MANDALINA AGENCY</span>
        <span class="title w-100 background-theme p-relative">
            <a href="/portfolyo" class="effect-ajax">
                Portfolyo
            </a>
        </span>
    </div>
</div>