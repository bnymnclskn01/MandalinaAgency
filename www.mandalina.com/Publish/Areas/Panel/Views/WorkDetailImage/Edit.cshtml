@model Mandalina.Entities.WorkImage

@{
    ViewBag.Title = "Yeni Alt İş Resim Güncelle";
    Layout = "~/Areas/Panel/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                <div class="panel-actions">
                    <a href="#" class="fa fa-caret-down"></a>
                    <a href="#" class="fa fa-times"></a>
                </div>

                <h2 class="panel-title">Yeni Alt İş Resim Güncelle</h2>
            </header>
            <div class="panel-body">
                @using (Html.BeginForm("Edit", "WorkDetailImage", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    @Html.AntiForgeryToken()

                    <div class="form-horizontal">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.Id)

                        <div class="form-group">
                            <label class="control-label col-md-2">Resim</label>
                            <div class="col-md-10">
                                <input type="file" class="form-control" name="ImageUrl" />
                                @Html.ValidationMessageFor(model => model.ImageUrl, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label col-md-2">Alt İş Başlık</label>
                            <div class="col-md-10">
                                @Html.DropDownList("WorkID", null, htmlAttributes: new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.WorkID, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label col-md-2">Aktif Durumu</label>
                            <div class="col-md-10">
                                <div class="checkbox">
                                    @Html.EditorFor(model => model.IsActiveted) (Aktif | Pasif)
                                    @Html.ValidationMessageFor(model => model.IsActiveted, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label col-md-2">Silinme Durumu Durumu</label>
                            <div class="col-md-10">
                                <div class="checkbox">
                                    @Html.EditorFor(model => model.IsDeleted) (Aktif | Pasif)
                                    @Html.ValidationMessageFor(model => model.IsDeleted, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <button type="submit" class="btn btn-primary"><i class="fa fa-pencil"></i> Resim Güncelle</button>
                                <a href="@Url.Action("Index","WorkDetailImage")" class="btn btn-dark"><i class="fa fa fa-reply-all"></i> Listeye Geri Dön</a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </section>

    </div>
</div>