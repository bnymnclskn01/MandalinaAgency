@model IEnumerable<Mandalina.Entities.AboutUs>
@{
    ViewBag.Title = "Hakkımızda Listele";
    Layout = "~/Areas/Panel/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <section class="panel">
        <header class="panel-heading bg-tertiary">
            <div class="panel-actions">
                <a href="#" style="color:white;" class="fa fa-caret-down"></a>
                <a href="#" style="color:white;" class="fa fa-times"></a>
            </div>

            <h2 class="panel-title" style="color:white;">Hakkımızda Listele</h2>
        </header>
        <div class="panel-body">
            <table class="table table-bordered table-striped mb-none" id="datatable-tabletools" data-swf-path="assets/vendor/jquery-datatables/extras/TableTools/swf/copy_csv_xls_pdf.swf">
                <thead>
                    <tr>
                        <th>Ana Başlık</th>
                        <th>Alt Başlık</th>
                        <th>Hakkımızda Resim</th>
                        <th>Aktif Durumu</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr class="gradeX">
                            <td>@item.MainTitle</td>
                            <td>@item.Title</td>
                            <td><img src="@item.ImageUrl" alt="@item.Title" width="150" /></td>
                            @if (item.IsActiveted == true)
                            {
                                <td><i class="fa fa-check"></i> Aktif</td>
                            }
                            else
                            {
                                <td><i class="fa fa-remove"></i> Pasif</td>
                            }
                        <td>
                            <a href="/Panel/AboutUs/Edit/@item.Id" class="btn btn-info"><i class="fa fa-edit"></i></a>
                            <a onclick="return confirm('Silmek istediğinize eminmisiniz ?')" class="btn btn-danger" href="/Panel/AboutUs/Delete/@item.Id"><i class="fa fa-trash-o"></i></a>
                        </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </section>
</div>