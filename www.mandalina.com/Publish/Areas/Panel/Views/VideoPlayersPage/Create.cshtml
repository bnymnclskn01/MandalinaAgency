@model Mandalina.Entities.VideoPlayer

@{
    ViewBag.Title = "Yeni Video Player Ekle";
    Layout = "~/Areas/Panel/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                <div class="panel-actions">
                    <a href="#" class="fa fa-caret-down"></a>
                    <a href="#" class="fa fa-times"></a>
                </div>

                <h2 class="panel-title">Yeni Video Oynatıcı Ekle</h2>
            </header>
            <div class="panel-body">
                @using (Html.BeginForm("Create", "VideoPlayersPage", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        <label class="control-label col-md-2">Dil</label>
                        <div class="col-md-10">
                            @Html.DropDownList("LanguageId", null, htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.LanguageId, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-2">Video & Resim Url</label>
                        <div class="col-md-10">
                            <input type="file" name="VideoUrl" class="form-control" required />
                            @Html.ValidationMessageFor(model => model.VideUrl, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-2">Alt Etiket</label>
                        <div class="col-md-10">
                            <input type="text" name="Alt" class="form-control" required placeholder="Lütfen Alt Etiket Giriniz ..." maxlength="110" />
                            @Html.ValidationMessageFor(model => model.Alt, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-2">Başlık</label>
                        <div class="col-md-10">
                            <input type="text" name="Title" class="form-control" required placeholder="Lütfen Başlık Giriniz" maxlength="110" />
                            @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-2">İçerik</label>
                        <div class="col-md-10">
                            <textarea name="Content" required class="ckeditor" maxlength="500"></textarea>
                            @Html.ValidationMessageFor(model => model.Content, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-2">Sıra</label>
                        <div class="col-md-10">
                            <input type="number" name="Rank" class="form-control" required placeholder="Sıra Giriniz ..." maxlength="4" />
                            @Html.ValidationMessageFor(model => model.Rank, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-2">Url Giriniz</label>
                        <div class="col-md-10">
                            <input type="text" name="ProductUrl" class="form-control" required placeholder="/portfolyo/test gibi örnek giriniz" maxlength="110" />
                            @Html.ValidationMessageFor(model => model.ProductUrl, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-2">Aktif | Pasif</label>
                        <div class="col-md-10">
                            <div class="checkbox">
                                <select class="form-control mb-md" required name="IsActiveted">
                                    <option value="True">Aktif</option>
                                    <option value="False">Pasif</option>
                                </select>
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <button type="submit" class="btn btn-success"><i class="fa fa-check"></i> Yeni Video Player Ekle</button>
                            <a href="@Url.Action("Index","VideoPlayersPage")" class="btn btn-dark"><i class="fa fa-reply-all"></i> Listeye Geri Dön</a>
                        </div>
                    </div>
                </div>
                }
            </div>
        </section>

    </div>
</div>