@model Mandalina.Entities.ConstantValues

@{
    ViewBag.Title = "Sabit Değer Güncelle";
    Layout = "~/Areas/Panel/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                <div class="panel-actions">
                    <a href="#" class="fa fa-caret-down"></a>
                    <a href="#" class="fa fa-times"></a>
                </div>

                <h2 class="panel-title">Yeni Sabit Değer Güncelle</h2>
            </header>
            <div class="panel-body">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.Id)

                    <div class="form-group">
                        <label class="control-label col-md-2">Dil</label>
                        <div class="col-md-10">
                            @Html.DropDownList("LanguageId", null, htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.LanguageId, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-2">Sayfa Adı</label>
                        <div class="col-md-10">
                            <input type="text" value="@Model.PageName" name="PageName" class="form-control" placeholder="contact|iletisim - about|hakkimizda - home|anasayfa - work|isler" required maxlength="50" />
                            @Html.ValidationMessageFor(model => model.PageName, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-2">Anahtar</label>
                        <div class="col-md-10">
                            <input type="text" name="Key" placeholder="ContactAdressText|HomeServiceList|HomeCategoryList" value="@Model.Key" maxlength="70" required class="form-control" />
                            @Html.ValidationMessageFor(model => model.Key, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-2">Değer</label>
                        <div class="col-md-10">
                            <input type="text" name="Value" value="@Model.Value" placeholder="Hizmetlerimiz|Services|Categories" maxlength="110" class="form-control" />
                            @Html.ValidationMessageFor(model => model.Value, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-2">Aktif | Pasif</label>
                        <div class="col-md-10">
                            <select class="form-control mb-md" required name="IsActiveted">
                                @if (Model.IsActiveted == true)
                                {
                                    <option selected value="True">Aktif</option>
                                    <option value="False">Pasif</option>
                                }
                                else
                                {
                                    <option value="True">Aktif</option>
                                    <option selected value="False">Pasif</option>
                                }
                            </select>
                            @Html.ValidationMessageFor(model => model.IsActiveted, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <button type="submit" class="btn btn-primary"><i class="fa fa-pencil"></i> Yeni Sabit Değer Güncelle</button>
                            <a href="@Url.Action("Index","ConstantValue")" class="btn btn-dark"><i class="fa fa-reply-all"></i> Listeye Geri Dön</a>
                        </div>
                    </div>
                </div>
                }
            </div>
        </section>
    </div>
</div>