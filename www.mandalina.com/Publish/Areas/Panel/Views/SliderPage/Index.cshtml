@model List<Mandalina.Core.ViewModelForPanel.PanelPage.SliderPage.SliderListPageVM>
@{
    ViewBag.Title = "Slider Listele";
    Layout = "~/Areas/Panel/Views/Shared/_Layout.cshtml";
}
@if (ViewBag.Message != null)
{
    <div class="row">
        <section class="panel">
            <header class="panel-heading bg-success">
                <div class="panel-actions">
                    <a href="#" style="color:white;" class="fa fa-caret-down"></a>
                    <a href="#" style="color:white;" class="fa fa-times"></a>
                </div>

                <h2 class="panel-title" style="color:white;">Bilgilendirme Mesajı</h2>
            </header>
            <div class="panel-body">
                <div class="col-md-12">
                    <p>@ViewBag.Message</p>
                </div>
            </div>
        </section>
    </div>
}
@if (ViewBag.ErrorMessage != null)
{
    <div class="row">
        <section class="panel">
            <header class="panel-heading bg-danger">
                <div class="panel-actions">
                    <a href="#" style="color:white;" class="fa fa-caret-down"></a>
                    <a href="#" style="color:white;" class="fa fa-times"></a>
                </div>

                <h2 class="panel-title" style="color:white;">Hata Mesajı</h2>
            </header>
            <div class="panel-body">
                <div class="col-md-12">
                    <p>@ViewBag.ErrorMessage</p>
                </div>
            </div>
        </section>
    </div>
}
<div class="row">
    <section class="panel">
        <header class="panel-heading bg-tertiary">
            <div class="panel-actions">
                <a href="#" style="color:white;" class="fa fa-caret-down"></a>
                <a href="#" style="color:white;" class="fa fa-times"></a>
            </div>

            <h2 class="panel-title" style="color:white;">Slider Listele</h2>
        </header>
        <div class="panel-body">
            <table class="table table-bordered table-striped mb-none" id="datatable-tabletools" data-swf-path="assets/vendor/jquery-datatables/extras/TableTools/swf/copy_csv_xls_pdf.swf">
                <thead>
                    <tr>
                        <th>Dil</th>
                        <th>Slider Başlığı</th>
                        <th>Slider Resim</th>
                        <th>Aktif Durumu</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr class="gradeX">
                            <td>@item.LanguageName</td>
                            <td>@item.Title</td>
                            <td><img src="@item.ImageUrl" alt="@item.Title" width="150" /></td>
                            @if (item.IsActiveted == true)
                            {
                                <td><i class="fa fa-check"></i> Aktif</td>
                            }
                            else
                            {
                                <td><i class="fa fa-remove"></i> Pasif</td>
                            }
                            <td>
                                <a href="/Panel/SliderPage/UpdateSliderPage/@item.Id" class="btn btn-info"><i class="fa fa-edit"></i></a>
                                <a href="/Panel/SliderPage/DeleteSlider/@item.Id" class="btn btn-danger"><i class="fa fa-trash-o"></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </section>
</div>