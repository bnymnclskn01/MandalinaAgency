@model List <Mandalina.Core.ViewModelForPanel.EntityVMForPanel.LanguageForPanel.LanguageForPanel>
@{
      ViewBag.Title = "Main Slider Ekle";
              Layout = "~/Areas/Panel/Views/Shared/_Layout.cshtml";
}
@if (ViewBag.ErrorMessage != null)
{
    <div class="row">
        <section class="panel">
            <header class="panel-heading bg-danger">
                <div class="panel-actions">
                    <a href="#" style="color:white;" class="fa fa-caret-down"></a>
                    <a href="#" style="color:white;" class="fa fa-times"></a>
                </div>

                <h2 class="panel-title" style="color:white;">Hata Mesajı</h2>
            </header>
            <div class="panel-body">
                <div class="col-md-12">
                    <p>@ViewBag.ErrorMessage</p>
                </div>
            </div>
        </section>
    </div>
}
<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                <div class="panel-actions">
                    <a href="#" class="fa fa-caret-down"></a>
                    <a href="#" class="fa fa-times"></a>
                </div>

                <h2 class="panel-title">Main Slider Ekle</h2>
            </header>
            <div class="panel-body">
                <form class="form-horizontal form-bordered" action="/Panel/SliderPage/SliderAddPage" method="post" enctype="multipart/form-data">
                    <div class="form-group">
                        <label class="col-md-2">Dil Seçiniz</label>
                        <div class="col-md-10">
                            <select class="form-control mb-md" required name="LanguageId">
                                <option value="">Lütfen Seçiniz</option>
                                @if (Model != null)
                                {
                                    foreach (var Lang in Model)
                                    {
                                        <option value="@Lang.Id">@Lang.LangName</option>
                                    }
                                }
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-2">Slider Başlık</label>
                        <div class="col-md-10">
                            <input type="text" name="Title" class="form-control" placeholder="Lütfen Başlık Giriniz...">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-2">Slider Slogan</label>
                        <div class="col-md-10">
                            <input type="text" name="Slogans" class="form-control" placeholder="Lütfen Slogan Giriniz...">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-2">Slider İçerik</label>
                        <div class="col-md-10">
                            <textarea class="ckeditor" name="Content" required></textarea>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-2">Slider Sıra</label>
                        <div class="col-md-10">
                            <input type="number" name="Rank" class="form-control" placeholder="Lütfen Sıra Giriniz...">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-2">Aktif Pasif</label>
                        <div class="col-md-10">
                            <select class="form-control mb-md" required name="IsActiveted">
                                <option value="0">Lütfen Seçiniz</option>
                                <option value="1">Aktif</option>
                                <option value="2">Pasif</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-2">Slider Resim</label>
                        <div class="col-md-10">
                            <input type="file" name="fileUpload" class="form-control" required />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-2">İşlem Butonu</label>
                        <div class="col-md-10">
                            <button type="submit" class="btn btn-success"><i class="fa fa-check"></i> Slider Ekle</button>
                        </div>
                        
                    </div>
                </form>
            </div>
        </section>

    </div>
</div>